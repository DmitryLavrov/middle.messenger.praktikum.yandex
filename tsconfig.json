{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es6",
    "allowJs": true,
    "declaration": false,
    "module": "es2020",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src/**/*.ts"],
  "typeRoots": [
    "src/declarations.d.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,

    "compilerOptions": {
      "module": "commonjs",
    }
  }
}
