{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es6",
    "allowJs": true,
    "declaration": false,
    "module": "es6",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src/**/*.ts"],
  "typeRoots": [
    "src/declarations.d.ts"
  ]
}
