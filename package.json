{
  "name": "my-webpack-project",
  "version": "1.0.0",
  "description": "My webpack project",
  "scripts": {
    "build": "webpack --mode=production --define-process-env-node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --define-process-env-node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve",
    "start": "node app.js",
    "parcel-dev": "parcel ./static/index.html --port 3000",
    "parcel-build": "parcel build ./static/index.html",
    "clear": "rm -rf dist .parcel-cache",
    "eslint": "eslint . --ext=.js,.ts",
    "eslint-fix": "eslint . --ext=.js,.ts --fix",
    "stylelint": "npx stylelint \"**/*.scss\"",
    "stylelint-fix": "npx stylelint \"**/*.scss\" --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "1.0.1",
    "@parcel/resolver-glob": "2.8.0",
    "@parcel/transformer-inline-string": "2.8.0",
    "@parcel/transformer-sass": "2.8.0",
    "@parcel/validator-typescript": "2.8.0",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.0",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "chai": "4.3.7",
    "css-loader": "^6.7.2",
    "eslint": "8.28.0",
    "eslint-config-airbnb": "19.0.4",
    "handlebars-loader": "^1.7.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.2",
    "mini-css-extract-plugin": "^2.6.1",
    "mocha": "10.1.0",
    "npm": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "parcel": "2.8.0",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "14.15.0",
    "stylelint-config-standard": "29.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "express": "4.18.2",
    "handlebars": "4.7.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all eslint stylelint"
    }
